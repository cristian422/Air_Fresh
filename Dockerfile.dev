# ===== Desarrollo: FastAPI con hot-reload =====
FROM python:3.13-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8000 \
    APP_MODULE=app.main:app \
    TZ=America/Bogota

# Paquetes útiles en dev (curl para pruebas de salud)
RUN apt-get update && apt-get install -y --no-install-recommends \
    tzdata curl && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Dependencias (usa tu requirements.txt de prod)
COPY requirements.txt ./
RUN pip install --upgrade pip && \
    pip install -r requirements.txt && \
    # Sugerido para reload más fiable dentro de contenedor
    pip install watchfiles

# Copiamos el código (luego será montado como volumen)
COPY app ./app

EXPOSE ${PORT}

# Inicia en modo recarga
CMD ["bash", "-lc", "uvicorn ${APP_MODULE} --host 0.0.0.0 --port ${PORT} --reload --log-level debug"]
